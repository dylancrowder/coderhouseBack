<main>

  <h2>hola como estas {{name}}</h2>
  <h1>Productos</h1>
  <article>
    <table>
      <tr>
        <th>title</th>
        <th>size</th>
        <th>price</th>
        <th>accion</th>
      </tr>
      {{#each payload}}
        <tr>
          <td>{{this.title}}</td>
          <td>{{this.size}}</td>
          <td>{{this.price}}</td>
          <td>
            <button
              onclick="buyProduct('{{this._id}}')"
              data-product-id="{{this._id}}"
            >Comprar</button>
          </td>
        </tr>
      {{/each}}
    </table>
    <p>Pagina actual {{page}}</p>
    <a href="{{prevLink}}" role="button">Anterior</a>
    <a href="{{nextLink}}" role="button">Siguiente</a>
  </article>
  <header>
    <a href="/logout" role="button">salir</a>
  </header>
</main>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script type="module" src="/js/products.js"></script>